<.header>Task Details</.header>

<section class="mt-4">
  <p><strong>Title:</strong> <%= @task.title %></p>
  <p><strong>Description:</strong> <%= @task.description || "—" %></p>
</section>

<div class="mt-6">
  <.link navigate={~p"/tasks"} class="mr-4">← Back to list</.link>
  <.link navigate={~p"/tasks/#{@task.id}/edit"}>Edit</.link>
</div>
